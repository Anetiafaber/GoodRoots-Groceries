@model Microsoft.AspNetCore.Identity.IdentityUser

<div class="container mt-5 admin-containercontainer">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="m-0">Delete User</h1>
    </div>

    <p>Are you sure you want to delete this user?</p>

    <div class="border rounded p-3 mb-4 bg-light">
        <p><strong>Username:</strong> @Model.UserName</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>

    <form asp-action="DeleteUser" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
        <a asp-action="UserManagement" class="btn btn-secondary">Cancel</a>
    </form>
</div>
