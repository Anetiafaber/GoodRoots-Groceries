@model Group13_GoodRoots.Models.Product

<div class="container mt-4 admin-container">
        <h1 class="mb-4 text-center">Add Product</h1>
        <form asp-action="AddProduct" method="post" class="p-4 border rounded shadow-sm bg-light">
            <div class="row g-3">
                <!-- Product Name -->
                <div class="col-12 col-md-6">
                    <label asp-for="ProductName" class="form-label">Product Name</label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <!-- Short Description -->
                <div class="col-12 col-md-6">
                    <label asp-for="ShortDescription" class="form-label">Short Description</label>
                    <input asp-for="ShortDescription" class="form-control" />
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>

                <!-- Category -->
                <div class="col-12 col-md-6">
                    <label asp-for="CategoryId" class="form-label">Category</label>
                    <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))" class="form-control"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <!-- Price -->
                <div class="col-12 col-md-6">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" min="0" max="1000"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Stock Quantity -->
                <div class="col-12 col-md-6">
                    <label asp-for="StockQuantity" class="form-label">Stock Quantity</label>
                    <input asp-for="StockQuantity" type="number" class="form-control" min="0" max="1000"/>
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>

                <!-- On Sale -->
                <div class="col-12 col-md-6 d-flex align-items-center">
                    <input asp-for="IsSale" class="form-check-input me-2" />
                    <label asp-for="IsSale" class="form-check-label">On Sale</label>
                    <span asp-validation-for="IsSale" class="text-danger ms-2"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-success mt-4"><i class="fas fa-save"></i> Save</button>
        </form>
    </div>




