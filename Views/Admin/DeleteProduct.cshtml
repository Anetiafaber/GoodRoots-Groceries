@model Group13_GoodRoots.Models.Product

<div class="container mt-5 admin-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="m-0">Delete Product</h1>
    </div>

    <p>Are you sure you want to delete this product?</p>

    <div class="border rounded p-3 mb-4 bg-light">
        <h3 class="mb-3">@Model.ProductName</h3>
        <p><strong>Category:</strong> @Model.Category.CategoryName</p>
        <p><strong>Price:</strong> @string.Format("{0:C}", @Model.Price)</p>
        <p><strong>Stock:</strong> @Model.StockQuantity</p>
    </div>

    <form asp-action="DeleteProduct" method="post">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-action="ProductManagement" class="btn btn-secondary">Cancel</a>
    </form>
</div>
